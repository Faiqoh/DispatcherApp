<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="50dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary" />

            <ImageView
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="245dp"
                android:src="@drawable/header" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:text="Hi Rama Agastya"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                android:text="So, what occupation will you choose today?"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:background="@color/white" />


            <TextView
                android:id="@+id/title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="175dp"
                android:text="Job Category"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_see_all2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="180dp"
                android:text="See All"
                android:textColor="#ff9900"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/cat_android"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="215dp"
                android:src="@drawable/category_android" />

            <ImageView
                android:id="@+id/cat_backend"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="215dp"
                android:src="@drawable/category_backend" />

            <ImageView
                android:id="@+id/cat_ios"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="215dp"
                android:src="@drawable/category_ios" />

            <ImageView
                android:id="@+id/cat_system"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="215dp"
                android:src="@drawable/category_system" />

            <ImageView
                android:id="@+id/cat_frontend"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="215dp"
                android:src="@drawable/category_frontend" />

            <TextView
                android:id="@+id/title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="300dp"
                android:text="Job List"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="305dp"
                android:text="See All"
                android:textColor="#ff9900"
                android:textSize="9sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewlistjob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="320dp"
                    android:clipToPadding="false"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:scrollbars="vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Recommended for you"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_see_all3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="310dp"
                        android:text="See All"
                        android:textColor="#ff9900"
                        android:textSize="9sp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewrecomendjob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:clipToPadding="false"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>